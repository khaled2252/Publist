<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sunsetOrange">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/icon_logo_size"
        android:layout_height="@dimen/icon_logo_size"
        android:layout_marginStart="@dimen/horizontal_default_margin"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="100dp"
        android:src="@drawable/ic_logo_white_background"
        app:layout_constraintBottom_toTopOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontal_default_margin"
        android:layout_marginEnd="@dimen/horizontal_default_margin"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="100dp"
        android:maxLines="3"
        app:autoSizeTextType="uniform"
        android:fontFamily="@font/sfprodisplaybold"
        android:text="@string/login_headline"
        android:textColor="@android:color/white"
        android:textSize="@dimen/headline_text_size"
        app:layout_constraintBottom_toTopOf="@+id/buttonGoogle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonGoogle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontal_button_margin"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="@dimen/horizontal_button_margin"
        android:backgroundTint="@color/sunsetOrange"
        android:fontFamily="@font/lucidagrandebold"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:stateListAnimator="@null"
        android:text="@string/connect_with_google"
        android:textAllCaps="false"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:textSize="@dimen/button_login_text_size"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_google"
        app:iconGravity="textStart"
        app:iconPadding="20dp"
        app:iconSize="@dimen/button_icon_size"
        app:iconTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/buttonFacebook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:strokeColor="@android:color/white"
        app:strokeWidth="1.5dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonFacebook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontal_button_margin"
        android:layout_marginTop="@dimen/login_button_top_margin"
        android:layout_marginEnd="@dimen/horizontal_button_margin"
        android:backgroundTint="@color/sunsetOrange"
        android:fontFamily="@font/lucidagrandebold"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:stateListAnimator="@null"
        android:text="@string/connect_with_facebook"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/button_login_text_size"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_facebook"
        app:iconGravity="textStart"
        app:iconPadding="20dp"
        app:iconSize="@dimen/button_icon_size"
        app:iconTint="@null"
        app:layout_constraintBottom_toTopOf="@id/buttonGuest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGoogle"
        app:strokeColor="@android:color/white"
        app:strokeWidth="1.5dp" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebookLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonGuest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontal_button_margin"
        android:layout_marginTop="@dimen/login_button_top_margin"
        android:layout_marginEnd="@dimen/horizontal_button_margin"
        android:backgroundTint="@android:color/white"
        android:fontFamily="@font/sfprodisplaysemibold"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:stateListAnimator="@null"
        android:text="@string/continue_as_a_guest"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/button_login_text_size"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_guest"
        app:iconGravity="textStart"
        app:iconPadding="20dp"
        app:iconSize="@dimen/button_icon_size"
        app:iconTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonFacebook" />

    <FrameLayout
        android:id="@+id/progressBarHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.35"
        android:animateLayoutChanges="true"
        android:background="@color/dimGray"
        android:visibility="gone"></FrameLayout>

    <ProgressBar
        android:id="@+id/progress_circular"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/colorPrimaryDark"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>