<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sunsetOrange">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/horizontalDefaultMargin"
                android:layout_marginTop="127dp"
                android:src="@drawable/ic_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/horizontalDefaultMargin"
                android:layout_marginTop="23dp"
                android:text="Welcome to Wishpub, to add public chechlist you need to be a guest or signed user.."
                android:textColor="@android:color/white"
                android:textSize="@dimen/headlineTextSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonFacebook"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/horizontalButtonMargin"
                android:layout_marginTop="48dp"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/ic_facebook"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="Connect with Facebook"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/buttonLoginTextSize"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:strokeColor="@android:color/white"
                app:strokeWidth="1.5dp" />

        <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/horizontalDefaultMargin"
                android:layout_marginTop="18dp"
                android:text="Or.."
                android:textColor="@android:color/white"
                android:textSize="@dimen/headlineTextSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonFacebook" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonGuest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/horizontalButtonMargin"
                android:layout_marginTop="18dp"
                android:background="@android:color/white"
                android:drawableStart="@drawable/ic_guest"
                android:text="Continue as a guest"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="@dimen/buttonLoginTextSize"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:strokeColor="@android:color/white" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>