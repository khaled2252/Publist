<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="imageUrl"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/editProfileImageView"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"/>
        <ImageView
            android:id="@+id/profilePictureImageView"
            tools:src="@drawable/ic_logo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@id/nameTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:profilePictureUrl="@{imageUrl}" />

        <TextView
            android:id="@+id/nameTextView"
            tools:text="Mason Moreno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horizontalDefaultMargin"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/horizontalDefaultMargin"
            android:fontFamily="@font/sfprodisplaybold"
            android:gravity="center"
            android:textColor="@color/dimGray"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/tab_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profilePictureImageView" />


            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                app:tabTextAppearance="@style/MyCustomTextAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabIndicatorHeight="0dp"
                app:tabMode="fixed"
                android:layout_marginTop="15dp"
                app:tabRippleColor="@color/sunsetOrange"
                app:tabSelectedTextColor="@android:color/black"
                app:tabTextColor="@color/tab_text_selector"
                app:layout_constraintTop_toBottomOf="@id/nameTextView"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/profile_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/tab_layout"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
