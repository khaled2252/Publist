<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded"
    android:backgroundTint="@color/white"
    android:clipToPadding="true"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    android:fitsSystemWindows="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/editWishTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:drawableStart="@drawable/ic_editor_layer_list"
        android:drawablePadding="21dp"
        android:fontFamily="@font/sfprodisplaysemibold"
        android:paddingBottom="20dp"
        android:text="@string/edit"
        android:textColor="@color/dimGray"
        android:textSize="18sp" />

    <View
        android:id="@+id/dashed_line"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/dashed_line"
        android:layerType="software" />

    <TextView
        android:id="@+id/deleteWishTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:drawableStart="@drawable/ic_trash_layer_list"
        android:drawablePadding="21dp"
        android:fontFamily="@font/sfprodisplaysemibold"
        android:paddingVertical="20dp"
        android:text="@string/delete"
        android:textColor="@color/dimGray"
        android:textSize="18sp" />

</LinearLayout>