<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="imageUrl"
            type="String" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/profilePictureImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_logo"
        app:profilePicture="@{imageUrl}"
        app:layout_constraintBottom_toTopOf="@id/nameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontalDefaultMargin"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="@dimen/horizontalDefaultMargin"
        android:fontFamily="@font/sfprodisplaybold"
        android:gravity="center"
        tools:text="Mason Moreno"
        android:textColor="@color/dimGray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePictureImageView"
        app:layout_constraintBottom_toTopOf="@id/categoriesFragment"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/categoriesFragment"
        android:name="co.publist.features.categories.CategoriesFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/horizontalButtonMargin"
        android:layout_marginEnd="@dimen/horizontalButtonMargin"
        app:layout_constraintBottom_toTopOf="@id/buttonFindWishes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonFindWishes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontalDefaultMargin"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="@dimen/horizontalDefaultMargin"
        android:backgroundTint="@color/sunsetOrange"
        android:fontFamily="@font/lucidagrandebold"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="@string/save"
        android:textColor="@android:color/white"
        android:textSize="@dimen/buttonLoginTextSize"
        app:cornerRadius="10dp"
        app:iconGravity="textStart"
        app:iconPadding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoriesFragment"
        app:strokeColor="@color/sunsetOrange" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
