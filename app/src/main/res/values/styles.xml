<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/sunsetOrange</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.SplashScreen" >
        <item name="android:statusBarColor">@color/sunsetOrange</item>
        <!--        To remove white screen before splash-->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- Login screen -->
    <style name="AppTheme.LoginScreen" >
        <item name="android:statusBarColor">@color/sunsetOrange</item>
    </style>

    <!-- Intro screen -->
    <style name="AppTheme.IntroScreen" >
    </style>

    <!-- Edit Profile screen -->
    <style name="AppTheme.EditProfileScreen" >
        <item name="android:windowNoTitle">false</item>
    </style>

    <!-- Create Wish screen -->
    <style name="AppTheme.CreateWishScreen" >
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

</resources>
