<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/sunsetOrange</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.SplashScreen">
        <item name="android:statusBarColor">@color/sunsetOrange</item>
        <!--        To remove white screen before splash-->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- Login screen -->
    <style name="AppTheme.LoginScreen">
        <item name="android:statusBarColor">@color/sunsetOrange</item>
    </style>

    <!-- Intro screen -->
    <style name="AppTheme.IntroScreen"></style>

    <!-- Edit Profile screen -->
    <style name="AppTheme.EditProfileScreen"></style>

    <!-- Create Wish screen -->
    <style name="AppTheme.CreateWishScreen">
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <!-- Profile screen -->
    <style name="AppTheme.ProfileScreen"></style>

    <!-- Wish Details screen -->
    <style name="AppTheme.WishDetailsScreen"></style>

    <!-- Home screen -->
    <style name="AppTheme.HomeScreen"></style>

    <!-- OnBoarding screen -->
    <style name="AppTheme.OnBoarding"></style>

    <style name="MyBottomSheetDialog" parent="AppTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="CategoryChip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sfprodisplaysemibold</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/dimGray</item>
    </style>

</resources>
